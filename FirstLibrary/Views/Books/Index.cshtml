@model IEnumerable<FirstLibrary.Models.Books>

@{
    ViewBag.Title = "قائمة الكتب ";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

    <h2>قائمة الكتب</h2>

<p>
    @Html.ActionLink("إضافة كتاب جديد", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookImage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookContent)
        </td>
        <td>
            <img src="~/Bimgs/@Html.DisplayFor(model => item.BookImage)" 
                 class="thumbnail" 
                 style="width:48px;height:68px" />
        </td>
        <td>
            @Html.ActionLink("تعديل", "Edit", new { id=item.Id }) |
            @Html.ActionLink("التفاصيل", "Details", new { id=item.Id }) |
            @Html.ActionLink("الحذف", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
